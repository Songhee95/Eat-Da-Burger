<div class='container text-center'>
    <h1>burgers</h1>
    <div class="row">
    <ul class="display_burger col-6">
        {{#each burger}}
        {{#unless devoured}}
            <p class="burger_list alert alert-warning">
                {{this.id}} {{this.burger_name}}
                <button class="devour_btn btn btn-sm btn-secondary" data-id="{{this.id}}">Devour it!</button>
            </p>
        {{/unless}}
        {{/each}}
    </ul>
    <ul class="display_devour col-6">
        {{#each burger}}
            {{#if devoured}}
                <p class="devour_list alert alert-secondary">
                    {{this.id}} {{this.burger_name}}
                    <button class="delete_btn btn btn-sm btn-danger" data-id="{{this.id}}">Delete</button>
                </p>
            {{/if}}
        {{/each}}
    </ul>
    </div>
    <form class="create-form">
        <input class="burgerInput" type="text">
        <button type="submit" class="submit btn-primary">submit</button>
        <p>Enter a burger you want to eat Click the "Submit" button</p>
    </form>
</div>